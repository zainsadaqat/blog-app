<section>
  <%= form_with(model: comment, url: comments_path, method: :post, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :comment %><br />
      <%= f.text_area :text, class: "form-control", autocomplete: "text" %>
    </div>
    <div class="actions">
      <%= f.submit "Post", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>

<section>
  <% @posts.each do |post| %>
    <%= link_to post_path(@user, post) do %>
      <div>
        <h2><%= post.title %></h2>
        <p><%= post.text %></p>
      </div>
    <% end %>
    <hr/>
  <% end %>
  <% if current_user.present? && current_user.id == @user.id %>
    <%= link_to "Create a new post", new_post_path %>
  <% end %>
  <%= link_to "Back", root_path %>
</section>

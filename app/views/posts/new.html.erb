<h2>Create a new Post</h2>
<%= form_with(model: post, url: posts_path, method: :post, local: true) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autocomplete: "Title" %>
  </div>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, autocomplete: "Text" %>
  </div>
  <div class="actions">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
